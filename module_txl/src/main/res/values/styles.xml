<resources>

    <style name="txl_select_icon">
        <item name="android:padding">@dimen/dp_5</item>
        <item name="android:layout_width">@dimen/dp_40</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_height">@dimen/dp_40</item>
    </style>

    <style name="txl_select_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">信息</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/fontSize_16sp</item>
        <item name="android:paddingLeft">@dimen/dp_15</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="xl_select_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">@dimen/dp_4</item>
        <item name="android:paddingBottom">@dimen/dp_4</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="txl_list_item_text">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="txl_view_text">
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:layout_width">match_parent</item>
        <item name="key_width">120dp</item>
        <item name="key_color">@color/gray</item>
        <item name="android:paddingLeft">@dimen/dp_20</item>
        <item name="android:background">@color/white</item>
    </style>
</resources>
