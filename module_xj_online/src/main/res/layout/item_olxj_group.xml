<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingTop="@dimen/dp_5"
    android:paddingBottom="@dimen/dp_10"
    android:background="@drawable/sl_white_press">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/itemOLXJGroupIndex"
            android:tag="itemOLXJGroupIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_5"
            android:textSize="18dp"
            android:textColor="#e89300"
            android:text="序号" />

        <TextView
            android:id="@+id/itemOLXJGroupName"
            android:tag="itemOLXJGroupName"
            android:layout_toEndOf="@+id/itemOLXJGroupIndex"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/itemXJPathIndex"
            android:layout_marginLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_8"
            android:textColor="#366CBC"
            android:text="巡检路线"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/itemOLXJGroupType"
            android:tag="itemOLXJGroupType"
            android:layout_width="50dp"
            android:layout_height="23dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginRight="10dp"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center"
            android:background="@drawable/sh_text_view_bg"
            android:textSize="@dimen/fontSize_12sp"
            android:textColor="#366CBC"
            android:text="巡检" />
    </RelativeLayout>
    <com.supcon.mes.mbap.view.CustomTextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_5"
        android:id="@+id/itemOLXJGroupRemark"
        app:key="备注"
        app:key_color="@color/textColorlightblack"
        android:tag="itemOLXJGroupRemark"
        app:key_width="@dimen/dp_50"
        />
    <include layout="@layout/ly_recyclerview_with_scrollbar" android:layout_height="wrap_content" android:layout_width="match_parent"/>
    

</LinearLayout>


