<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/dp_10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15">

        <TextView
            android:id="@+id/statisticsPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="statisticsPosition"
            android:textColor="@color/themeColor"
            android:textSize="@dimen/fontSize_16sp"
            android:textStyle="bold"
            tools:text="1" />

        <TextView
            android:id="@+id/statisticsDepot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:drawableLeft="@drawable/icon_group"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:tag="statisticsDepot"
            android:textSize="@dimen/fontSize_16sp"
            tools:text="制成车间" />

        <TextView
            android:id="@+id/statisticsStaff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:drawableLeft="@drawable/icon_name"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:padding="@dimen/dp_5"
            android:tag="statisticsStaff"
            android:textSize="@dimen/fontSize_16sp"
            tools:text="xtcs001" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15">

        <TextView
            android:id="@+id/statisticsUndetected"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_25"
            android:tag="statisticsUndetected"
            android:textSize="@dimen/fontSize_14sp"
            tools:text="巡检次数：2/6" />

        <TextView
            android:id="@+id/statisticsUnseasonal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_10"
            android:padding="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_25"
            android:tag="statisticsUnseasonal"
            android:textSize="@dimen/fontSize_14sp"
            tools:text="巡检用时：/" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15">

        <TextView
            android:id="@+id/statisticsManualCheckIn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_25"
            android:tag="statisticsManualCheckIn"
            android:textSize="@dimen/fontSize_14sp"
            tools:text="手工签到率：20%" />

        <TextView
            android:id="@+id/statisticsHiddenDanger"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_10"
            android:padding="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_25"
            android:tag="statisticsHiddenDanger"
            android:textSize="@dimen/fontSize_14sp"
            tools:text="隐患数量：15%" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15">

        <TextView
            android:id="@+id/statisticsRunRate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_25"
            android:tag="statisticsRunRate"
            android:textSize="@dimen/fontSize_14sp"
            tools:text="班运转率：20%" />

        <TextView
            android:id="@+id/statisticsWorkOrder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp_10"
            android:padding="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_25"
            android:tag="statisticsWorkOrder"
            android:textSize="@dimen/fontSize_14sp"
            tools:text="工单：/" />
    </LinearLayout>
</LinearLayout>