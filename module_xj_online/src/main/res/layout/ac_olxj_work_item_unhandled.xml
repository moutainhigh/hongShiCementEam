<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgGray2">

    <include layout="@layout/ly_olxj_work_title" />

    <include
        layout="@layout/ly_recyclerview_with_scrollbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_70"
        android:layout_marginBottom="@dimen/dp_50" />

    <LinearLayout
        android:id="@+id/xjBtnLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentBottom="true"
        android:background="@drawable/sh_white_stroke"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:tag="xjBtnLayout">

        <TextView
            android:id="@+id/finishedBottomBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.1"
            android:gravity="center"
            android:tag="finishedBottomBtn"
            android:text="已完成巡检项"
            android:textColor="@color/customBlue4"
            android:textSize="@dimen/fontSize_14sp" />

        <TextView
            android:id="@+id/oneKeyFinishBottomBtn"
            style="@style/OrangeButtonRadius"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="0.8"
            android:gravity="center"
            android:tag="oneKeyFinishBottomBtn"
            android:text="一键完成"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/submitBottomBtn"
            style="@style/BlueButtonRadius"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="0.8"
            android:gravity="center"
            android:tag="submitBottomBtn"
            android:text="提交结果" />
    </LinearLayout>
</RelativeLayout>
