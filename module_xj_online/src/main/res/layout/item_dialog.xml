<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="终止任务"
        android:textSize="@dimen/fontSize_20sp" />

    <include layout="@layout/ly_line" />

    <com.supcon.mes.mbap.view.CustomEditText
        android:id="@+id/reason"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="15dp"
        app:edit_hint="请输入终止原因"
        app:gravity="top" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:orientation="horizontal">
        <Button
            android:id="@+id/blueBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sl_common"
            android:text="确定"
            android:textColor="@color/customBlue4"
            android:textSize="@dimen/fontSize_16sp" />
        <Button
            android:id="@+id/grayBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sl_common"
            android:text="取消"
            android:textColor="@color/gray"
            android:textSize="@dimen/fontSize_16sp" />

    </LinearLayout>
</LinearLayout>