<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/sl_press_no_stroke"
    android:padding="5dp">
    <com.supcon.mes.mbap.view.CustomExpandableTextView
        android:id="@+id/itemAddDeviceName"
        android:tag="itemAddDeviceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_40"
        app:expand_times="2"
        app:max_lines="2"
        app:text_color="@color/textColorlightblack"
        app:text_size="14" />
    <com.supcon.mes.mbap.view.CustomExpandableTextView
        android:id="@+id/itemAddDevicePlace"
        android:tag="itemAddDevicePlace"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemAddDeviceName"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        app:expand_times="2"
        app:max_lines="2"
        app:text_color="@color/hintColor"
        app:text_size="12" />
    <com.supcon.mes.mbap.view.CustomCheckBox
        android:id="@+id/itemAddDeviceCheckBox"
        android:tag="itemAddDeviceCheckBox"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

</RelativeLayout>
