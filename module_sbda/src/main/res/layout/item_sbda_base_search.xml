<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/pingyinHead"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/title_bg"
        android:gravity="left|center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:tag="pingyinHead"
        android:text="A"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/sl_press_no_stroke"
        android:padding="5dp">

        <com.supcon.mes.mbap.view.CustomExpandableTextView
            android:id="@+id/itemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_5"
            android:tag="itemName"
            app:expand_times="2"
            app:max_lines="2"
            app:text_color="@color/textColorlightblack"
            app:text_size="14" />

        <com.supcon.mes.mbap.view.CustomExpandableTextView
            android:id="@+id/itemId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/itemName"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_5"
            android:tag="itemId"
            app:expand_times="2"
            app:max_lines="2"
            app:text_color="@color/hintColor"
            app:text_size="12" />

        <com.supcon.mes.mbap.view.CustomCheckBox
            android:id="@+id/itemCheckBox"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:tag="itemCheckBox"
            android:visibility="visible" />
    </RelativeLayout>

</LinearLayout>
