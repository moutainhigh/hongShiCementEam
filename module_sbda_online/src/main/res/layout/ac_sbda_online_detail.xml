<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/ly_titlebar" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/themeColor"
        android:paddingBottom="@dimen/dp_2"
        android:tag="tablayout"
        app:tabBackground="@drawable/tab_select"
        app:tabIndicatorHeight="0dp"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/themeColor"
        app:tabTextColor="@color/white" />

    <com.supcon.mes.mbap.view.NoScrollViewPager
        android:id="@+id/sbdaViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_2"
        android:tag="sbdaViewPager" />
</LinearLayout>