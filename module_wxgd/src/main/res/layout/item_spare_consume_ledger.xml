<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="@dimen/dp_10"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <com.supcon.mes.mbap.view.CustomTextView
        android:id="@+id/itemSparePartTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_5"
        android:tag="itemSparePartTv"
        app:content_hint="--"
        app:key="零部件:"
        app:max_lines="5" />

    <com.supcon.mes.mbap.view.CustomTextView
        android:id="@+id/itemSpareModelTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_5"
        android:tag="itemSpareModelTv"
        app:content_hint="--"
        app:key="规格型号:"
        app:max_lines="5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemSpareUsageTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/dp_5"
            android:tag="itemSpareUsageTv"
            app:content_hint="--"
            app:key="领用量:" />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemSpareConsumptionTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/dp_5"
            android:tag="itemSpareConsumptionTv"
            app:content_hint="--"
            app:key="消耗量:"
            app:max_lines="100" />
    </LinearLayout>

    <com.supcon.mes.mbap.view.CustomTextView
        android:id="@+id/itemSpareTeamTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_5"
        android:tag="itemSpareTeamTv"
        app:text="维修组："/>

    <com.supcon.mes.mbap.view.CustomTextView
        android:id="@+id/itemSpareStaffTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_5"
        android:tag="itemSpareStaffTv"
        app:text="负责人：" />

    <com.supcon.mes.mbap.view.CustomTextView
        android:id="@+id/itemSpareTableNoTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_5"
        android:tag="itemSpareTableNoTv"
        app:content_color="@color/themeColor"
        app:content_hint="--"
        app:key="工单编号:"
        app:max_lines="100" />
</LinearLayout>
