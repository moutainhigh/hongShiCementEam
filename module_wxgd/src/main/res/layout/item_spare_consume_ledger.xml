<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="vertical">

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemSparePartTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_30"
            android:paddingLeft="@dimen/dp_5"
            android:tag="itemSparePartTv"
            app:content_hint="--"
            app:gravity="center"
            app:key="零部件:"
            app:max_lines="1" />


        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemSpareModelTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:tag="itemSpareModelTv"
            app:content_hint="--"
            app:gravity="center"
            app:key="规格型号:"
            app:max_lines="100" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.supcon.mes.mbap.view.CustomTextView
                android:id="@+id/itemSpareUsageTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dp_5"
                android:tag="itemSpareUsageTv"
                app:content_hint="--"
                app:gravity="center"
                app:key="领用量:" />

            <com.supcon.mes.mbap.view.CustomTextView
                android:id="@+id/itemSpareConsumptionTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/dp_5"
                android:tag="itemSpareConsumptionTv"
                app:content_hint="--"
                app:gravity="center"
                app:key="消耗量:"
                app:max_lines="100" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:orientation="horizontal">

            <com.supcon.mes.mbap.view.CustomVerticalTextView
                android:id="@+id/itemSpareTeamTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/dp_5"
                android:tag="itemSpareTeamTv"
                app:text="维修组："
                app:text_size="16" />

            <com.supcon.mes.mbap.view.CustomVerticalTextView
                android:id="@+id/itemSpareStaffTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/dp_5"
                android:tag="itemSpareStaffTv"
                app:text="负责人："
                app:text_size="16" />
        </LinearLayout>

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemSpareTableNoTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:tag="itemSpareTableNoTv"
            app:content_color="@color/themeColor"
            app:content_hint="--"
            app:gravity="center"
            app:key="工单编号:"
            app:max_lines="100" />
    </LinearLayout>
</RelativeLayout>
