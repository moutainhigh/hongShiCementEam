<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_10"
    android:orientation="vertical"
    android:background="@color/white">

    <com.supcon.mes.mbap.view.CustomTextView
        android:id="@+id/itemSparePartReceiveTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_30"
        android:paddingLeft="@dimen/dp_5"
        android:tag="itemSparePartReceiveTv"
        app:content_hint="--"
        app:key="备件:"
        app:max_lines="1" />

    <com.supcon.mes.mbap.view.CustomTextView
        android:id="@+id/itemSpareReceiveModelTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_5"
        android:tag="itemSpareReceiveModelTv"
        app:content_hint="--"
        app:key="规格型号:"
        app:max_lines="100" />

    <com.supcon.mes.mbap.view.CustomTextView
        android:id="@+id/itemSpareReceiveEamTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_5"
        android:tag="itemSpareReceiveEamTv"
        app:content_hint="--"
        app:key="所属设备:"
        app:max_lines="100" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemSpareReceiveStaffTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/dp_5"
            android:tag="itemSpareReceiveStaffTv"
            app:content_hint="--"
            app:key="领用人:"
            app:max_lines="100" />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemSpareReceiveUsageTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/dp_5"
            android:tag="itemSpareReceiveUsageTv"
            app:content_hint="--"
            app:key="领用量:" />

    </LinearLayout>
</LinearLayout>
