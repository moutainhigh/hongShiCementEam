<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sl_press_no_stroke"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15">

        <TextView
            android:id="@+id/statisticsPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="statisticsPosition"
            android:textColor="@color/themeColor"
            android:textSize="@dimen/fontSize_16sp"
            android:textStyle="bold"
            tools:text="1" />

        <TextView
            android:id="@+id/statisticsEam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:padding="@dimen/dp_5"
            android:tag="statisticsEam"
            android:textSize="@dimen/fontSize_16sp"
            tools:text="辊压机" />
    </LinearLayout>

    <TextView
        android:id="@+id/statisticsContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:drawableLeft="@drawable/ic_content"
        android:drawablePadding="@dimen/dp_10"
        android:tag="statisticsContent"
        android:textSize="@dimen/fontSize_14sp"
        tools:text="这是内容" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15">

        <TextView
            android:id="@+id/statisticsStaff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_staff"
            android:drawablePadding="@dimen/dp_10"
            android:tag="statisticsStaff"
            android:textSize="@dimen/fontSize_14sp"
            tools:text="xtcs001" />

        <TextView
            android:id="@+id/statisticsTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:drawableStart="@drawable/ic_time33"
            android:drawablePadding="@dimen/dp_10"
            android:padding="@dimen/dp_5"
            android:tag="statisticsTime"
            android:textSize="@dimen/fontSize_14sp"
            tools:text="2010-09-08" />
    </LinearLayout>
</LinearLayout>
