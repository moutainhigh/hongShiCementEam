<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="LaunchAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/layer_welcome</item>
        <item name="windowActionBar">true</item>
	<item name="android:windowFullscreen">true</item>
    </style>
    <style name="Transparent2" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/fadeStyle</item>
    </style>
    <style name="TranslucentTheme" parent="AppBaseTheme">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
        <item name="android:windowBackground">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>
    <style name="LaunchAppTheme2" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="android:windowBackground">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>

    </style>
</resources>
