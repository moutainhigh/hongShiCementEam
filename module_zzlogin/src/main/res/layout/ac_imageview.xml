<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <com.supcon.mes.mbap.view.NoScrollViewPager
        android:id="@+id/imageViewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:tag="imageViewContainer" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:id="@+id/imageviewTitle"
        android:tag="imageviewTitle"
        android:background="#50000000"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/sl_top_back"
            android:id="@+id/imageviewBack"
            android:tag="imageviewBack"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:scaleType="centerInside"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="pageNum"
            android:id="@+id/pageNum"
            android:textColor="@color/white"
            android:textSize="@dimen/fontSize_16sp"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/sl_top_delete"
            android:id="@+id/imageviewDelete"
            android:tag="imageviewDelete"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:scaleType="centerInside"
            android:visibility="gone"
            />
    </RelativeLayout>

</RelativeLayout>