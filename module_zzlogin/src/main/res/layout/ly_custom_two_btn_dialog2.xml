<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="110dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:id="@+id/deleteDialog"
    android:tag="deleteDialog"
    android:visibility="visible"
    >
    <TextView android:id="@+id/msgText"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="确定要删除吗？"
        style="@style/TitleTextColor"
        android:textSize="@dimen/fontSize_17sp"
        android:padding="5dp"
        />
    <include layout="@layout/ly_line_light"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <Button
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/redBtn"
            android:tag="redBtn"
            android:text="确定"
            android:textColor="@color/customOrange2"
            android:textSize="@dimen/fontSize_16sp"
            android:background="@drawable/sl_common"
            android:gravity="center"
            />
        <include layout="@layout/ly_vertical_line"/>
        <Button
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/grayBtn"
            android:tag="grayBtn"
            android:text="取消"
            android:textColor="@color/gray"
            android:textSize="@dimen/fontSize_16sp"
            android:background="@drawable/sl_common"
            android:gravity="center"
            />

    </LinearLayout>

</LinearLayout>
