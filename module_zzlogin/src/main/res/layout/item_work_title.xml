    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        >
        <include
            layout="@layout/ly_title_pic"
            android:layout_width="5dp"
            android:layout_height="13dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contentTitleLabel"
            android:tag="contentTitleLabel"
            style="@style/TitleTextColor"
            android:layout_marginLeft="13dp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/contentTitleSettingIc"
            android:tag="contentTitleSettingIc"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_user_sz"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            android:visibility="gone"
            />
    </RelativeLayout>
    <include layout="@layout/ly_line_light" android:layout_marginTop="@dimen/dp_5" android:layout_width="match_parent" android:layout_height="@dimen/dp_1"/>
