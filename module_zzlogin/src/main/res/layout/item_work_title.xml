<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:orientation="vertical"
    >
    <include layout="@layout/ly_line_light" android:layout_width="match_parent" android:layout_height="@dimen/dp_2" android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp">
        <include
            layout="@layout/ly_title_pic"
            android:layout_width="5dp"
            android:layout_height="13dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contentTitleLabel"
            android:tag="contentTitleLabel"
            style="@style/TitleTextColor"
            android:layout_marginStart="13dp"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/contentTitleSettingIc"
            android:tag="contentTitleSettingIc"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_user_sz"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:visibility="gone"
            />
    </RelativeLayout>
    <include layout="@layout/ly_line_light" android:layout_marginTop="@dimen/dp_5" android:layout_width="match_parent" android:layout_height="@dimen/dp_1"/>
</LinearLayout>