<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/numViewText"
        style="@style/KeyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:padding="@dimen/dp_5"
        android:text="数量" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/sh_transparent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/numViewMinus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/sl_transparent_press"
            android:padding="@dimen/dp_10"
            android:scaleType="center"
            android:src="@drawable/ic_blue_minus" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/numViewInput"
            style="@style/ContentText"
            android:layout_width="@dimen/dp_60"
            android:layout_height="30dp"
            android:background="@null"
            android:cursorVisible="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="9"
            android:padding="@dimen/dp_5"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/numViewAdd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/sl_transparent_press"
            android:padding="@dimen/dp_10"
            android:scaleType="center"
            android:src="@drawable/ic_blue_add" />
    </LinearLayout>


</RelativeLayout>