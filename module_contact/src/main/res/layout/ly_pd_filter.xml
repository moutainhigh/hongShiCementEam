<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dp_5"
    android:paddingBottom="@dimen/dp_5"
    android:paddingLeft="12dp"
    android:background="@color/themeColor"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/DetailText"
        android:layout_gravity="center_vertical"
        android:text="筛选条件"
        android:textSize="@dimen/dp_12"
        android:visibility="gone"
        />
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_filter_white_stroke"
        android:scaleType="centerInside"
        android:layout_gravity="center_vertical"
        android:alpha="0.5"
        android:layout_marginEnd="@dimen/dp_5"
        />
    <com.supcon.mes.mbap.view.CustomFilterView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/listPdDateFilter"
        android:tag="listPdDateFilter"
        app:text="时间不限"
        app:text_size="14"
        app:icon_res="@drawable/ic_choose_white2"
        app:text_color="@color/white"
        />
    <com.supcon.mes.mbap.view.CustomFilterView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/listRepairTypeFilter"
        android:tag="listRepairTypeFilter"
        android:gravity="center"
        app:text="维修类型"
        android:visibility="gone"
        app:text_size="14"
        app:text_color="@color/white"
        app:icon_res="@drawable/ic_choose_white2"
        android:layout_marginRight="@dimen/dp_2"
        android:layout_marginLeft="@dimen/dp_6"
        />
    <com.supcon.mes.mbap.view.CustomFilterView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/listPriorityFilter"
        android:tag="listPriorityFilter"
        android:gravity="center"
        android:visibility="gone"
        app:text="优先级"
        app:text_size="14"
        app:text_color="@color/white"
        app:icon_res="@drawable/ic_choose_white2"
        android:layout_marginLeft="@dimen/dp_6"
        />

</LinearLayout>