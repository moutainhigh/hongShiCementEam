<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/ly_titlebar" />

    <com.supcon.mes.mbap.view.CustomSearchView
        android:id="@+id/customSearchView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:tag="customSearchView"
        app:search_hint="请输入部门名称、编码"
        android:visibility="gone"
        />
    <!--<include layout="@layout/ly_line_light"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/dp_15"
        android:orientation="vertical">
        <include layout="@layout/ly_recyclerview"/>
    </LinearLayout>
</LinearLayout>