<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line_gray"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/usrInfo"
        android:tag="usrInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/txl_view_title"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBack"
                android:tag="ivBack"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:padding="@dimen/dp_6"
                android:src="@drawable/sl_top_back" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/dp_10">

                <com.supcon.mes.mbap.view.CustomCircleTextImageView
                    android:layout_width="100dp"
                    android:id="@+id/userIcon"
                    android:layout_height="@dimen/dp_100"
                    android:padding="@dimen/dp_10"
                    android:src="@drawable/pic_contact_view_default"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:id="@+id/userName"
                    android:tag="userName"
                    android:gravity="center"
                    android:text="赵梦蕾"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fontSize_18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/userWork"
                    android:tag="userWork"
                    android:gravity="center"
                    android:text="开发工程师"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_12" />
            </LinearLayout>


            <ImageView
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_5"
                android:padding="@dimen/dp_5"
                android:src="@drawable/more_fun"
                android:visibility="invisible"
                />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usrInfo"
        android:background="#12a7db"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivTelphone"
                android:tag="ivTelphone"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:src="@drawable/txl_view_phone" />
        </LinearLayout>

        <include
            layout="@layout/ly_vertical_line"
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:id="@+id/ivSms"
                android:tag="ivSms"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:src="@drawable/txl_view_message" />
        </LinearLayout>

        <include
            layout="@layout/ly_vertical_line"
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:id="@+id/ivEmail"
                android:tag="ivEmail"
                android:src="@drawable/txl_view_mail" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:orientation="vertical">


        <com.supcon.mes.mbap.view.CustomTextView
            style="@style/txl_view_text"
            android:id="@+id/tvTelephone"
            android:tag="tvTelephone"
            app:content_value="18667936846"
            app:key="手机" />

        <include
            layout="@layout/ly_line_light"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_20" />

        <com.supcon.mes.mbap.view.CustomTextView
            style="@style/txl_view_text"
            app:content_value="未设置"
            android:id="@+id/phone"
            android:tag="phone"
            app:key="电话" />

        <include
            layout="@layout/ly_line_light"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_20" />

        <com.supcon.mes.mbap.view.CustomTextView
            style="@style/txl_view_text"
            app:content_value="未设置"
            android:id="@+id/otherPhone"
            android:tag="otherPhone"
            app:key="其他电话" />

        <include
            layout="@layout/ly_line_light"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_20" />

        <com.supcon.mes.mbap.view.CustomTextView
            style="@style/txl_view_text"
            android:id="@+id/email"
            android:tag="email"
            app:content_value="zhaomenglei@supcon.com"
            app:key="邮箱" />

        <include
            layout="@layout/ly_line_light"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_20" />

        <com.supcon.mes.mbap.view.CustomTextView
            style="@style/txl_view_text"
            app:content_value="MES开发二部"
            android:id="@+id/department"
            android:tag="department"
            app:key="部门" />
        <include
            layout="@layout/ly_line_light"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_20" />
        <com.supcon.mes.mbap.view.CustomTextView
            style="@style/txl_view_text"
            app:content_value="默认公司"
            android:id="@+id/company"
            android:tag="company"
            app:key="公司" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <com.supcon.mes.mbap.view.CustomTextView
            style="@style/txl_view_text"
            app:content_value="12"
            android:id="@+id/flow"
            android:tag="flow"
            app:key="流程" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/txl_view_send_mes"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:background="@color/white"
            android:textColor="#44BEEA"
            android:text="发消息" />
    </LinearLayout>

</LinearLayout>