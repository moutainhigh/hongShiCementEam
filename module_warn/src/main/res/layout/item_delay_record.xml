<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10">

    <com.supcon.mes.mbap.view.CustomTextView
        android:id="@+id/itemEquipmentNameTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5"
        android:tag="itemEquipmentNameTv"
        app:content_hint="--"
        app:gravity="right"
        app:key="设      备:"
        app:max_lines="1" />

    <com.supcon.mes.mbap.view.CustomTextView
        android:id="@+id/itemDelayBeforeTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5"
        android:tag="itemDelayBeforeTv"
        app:content_hint="--"
        app:gravity="right"
        app:key="延期前日期:"
        app:max_lines="1" />

    <com.supcon.mes.mbap.view.CustomTextView
        android:id="@+id/itemDelayAfterTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5"
        android:tag="itemDelayAfterTv"
        app:content_hint="--"
        app:gravity="right"
        app:key="延期日期:"
        app:max_lines="1" />

    <com.supcon.mes.mbap.view.CustomTextView
        android:id="@+id/itemDelayReasonTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5"
        android:tag="itemDelayReasonTv"
        app:content_hint="--"
        app:gravity="right"
        app:key="延期原因:"
        app:max_lines="1" />
</LinearLayout>