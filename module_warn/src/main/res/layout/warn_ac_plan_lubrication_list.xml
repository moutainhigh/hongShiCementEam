<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bgGray"
    android:orientation="vertical">

    <include layout="@layout/ly_titlebar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/white"
        android:layout_marginBottom="@dimen/dp_5"
        android:padding="@dimen/dp_10">
        <com.supcon.mes.mbap.view.CustomTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/lubricationStaff"
            android:tag="lubricationStaff"
            app:key="@string/warn_lubrication_staff"
            app:key_width="@dimen/dp_100"
            app:key_size="14"
            app:key_color="@color/grey"
            app:content_color="@color/black"
            android:visibility="gone"/>
        <com.supcon.mes.mbap.view.CustomTextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/lubricationNum"
            android:tag="lubricationNum"
            app:key="@string/warn_lubrication_num"
            app:key_size="14"
            app:key_color="@color/grey"
            app:content_color="@color/black"/>
    </LinearLayout>
    <include layout="@layout/ly_recyclerview" />

</LinearLayout>