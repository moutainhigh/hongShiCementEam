<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants">

    <CheckBox
        android:id="@+id/chkBox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:button="@drawable/sl_checkbox_selector"
        android:clickable="false"
        android:enabled="false"
        android:tag="chkBox" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_toRightOf="@+id/chkBox"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_15">

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemMaintenanceEquipmentNameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:tag="itemMaintenanceEquipmentNameTv"
            app:content_hint="--"
            app:gravity="right"
            app:key="设                备:"
            app:key_width="110dp"
            app:max_lines="2" />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemMaintenanceAttachEamTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:tag="itemMaintenanceAttachEamTv"
            app:content_hint="--"
            app:gravity="right"
            app:key="附   属   设   备:"
            app:key_width="110dp"
            app:max_lines="100" />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemMaintenanceSparePartIdTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:tag="itemMaintenanceSparePartIdTv"
            app:content_hint="--"
            app:gravity="right"
            app:key="零      部      件:"
            app:key_width="110dp"
            app:max_lines="100" />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemMaintenanceLastDateTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:tag="itemMaintenanceLastDateTv"
            app:content_hint="--"
            app:gravity="right"
            app:key="上次维保日期:"
            app:key_width="110dp" />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemMaintenanceNextDateTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:tag="itemMaintenanceNextDateTv"
            app:content_hint="--"
            app:gravity="right"
            app:key="下次维保日期:"
            app:key_width="110dp" />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemMaintenanceLastDurationTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:tag="itemMaintenanceLastDurationTv"
            app:content_hint="--"
            app:gravity="right"
            app:key="上次维保时长(h):"
            app:key_width="140dp" />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemMaintenanceNextDurationTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:tag="itemMaintenanceNextDurationTv"
            app:content_hint="--"
            app:gravity="right"
            app:key="下次维保时长(h):"
            app:key_width="140dp" />


        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemMaintenanceClaimTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:tag="itemMaintenanceClaimTv"
            android:visibility="gone"
            app:content_hint="--"
            app:gravity="right"
            app:key="要                求:"
            app:key_width="110dp" />

        <com.supcon.mes.mbap.view.CustomTextView
            android:id="@+id/itemMaintenanceContentTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_5"
            android:tag="itemMaintenanceContentTv"
            android:visibility="gone"
            app:content_hint="--"
            app:gravity="right"
            app:key="内                容:"
            app:key_width="110dp"
            app:max_lines="100" />

    </LinearLayout>

</RelativeLayout>
