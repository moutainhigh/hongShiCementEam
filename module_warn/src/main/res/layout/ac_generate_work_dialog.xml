<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <com.supcon.mes.mbap.view.CustomVerticalDateView
        android:id="@+id/dispatchPlanStartDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:tag="dispatchPlanStartDate"
        app:content_value="--"
        app:editable="true"
        app:key="计划开始日期:"
        app:necessary="true" />

    <com.supcon.mes.mbap.view.CustomVerticalDateView
        android:id="@+id/dispatchPlanEndDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:tag="dispatchPlanEndDate"
        app:content_value="--"
        app:editable="true"
        app:key="计划结束日期:"
        app:necessary="true" />

    <com.supcon.mes.mbap.view.CustomVerticalSpinner
        android:id="@+id/dispatchRepairGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:padding="@dimen/dp_10"
        android:tag="dispatchRepairGroup"
        app:key="维修组："
        app:necessary="true"
        app:editable="true"
        app:text_size="15" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:orientation="horizontal"
        tools:ignore="RtlHardcoded">

        <Button
            android:id="@+id/blueBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sl_common"
            android:tag="blueBtn"
            android:text="确定"
            android:textColor="@color/customBlue4"
            android:textSize="@dimen/fontSize_16sp" />

        <Button
            android:id="@+id/grayBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sl_common"
            android:tag="grayBtn"
            android:text="取消"
            android:textColor="@color/gray"
            android:textSize="@dimen/fontSize_16sp" />
    </LinearLayout>
</LinearLayout>