<resources>

    <style name="CustomStytle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">@dimen/dp_3</item>
        <item name="android:layout_marginTop">@dimen/dp_3</item>
    </style>

    <style name="HistoryDialog" parent="bottomSheet">
        <item name="android:background">@null</item>
    </style>
    <style name="TranslucentTheme" parent="AppBaseTheme">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
        <item name="android:windowBackground">@null</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>
</resources>
