<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titlebar_height"
    android:background="@color/themeColor"
    >

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:id="@+id/leftBtn"
        android:tag="leftBtn"
        android:visibility="visible"
        android:src="@drawable/ic_back"
        android:background="@null"
        android:scaleType="centerInside"
        android:padding="@dimen/dp_15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/titleText"
        android:tag="titleText"
        android:layout_toRightOf="@+id/leftBtn"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginRight="120dp"
        android:gravity="center_vertical" />
        <include layout="@layout/ly_filter" android:layout_width="wrap_content"  android:layout_height="match_parent"
            android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_marginRight="@dimen/dp_10"/>

</RelativeLayout>