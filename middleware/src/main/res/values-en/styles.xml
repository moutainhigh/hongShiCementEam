<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="CustomStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">@dimen/dp_3</item>
        <item name="android:layout_marginTop">@dimen/dp_3</item>
    </style>

    <style name="AnimationPreview">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="SBDASplitLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:layout_marginLeft">@dimen/dp_15</item>
        <item name="android:layout_marginRight">@dimen/dp_15</item>
    </style>
    <style name="UpdateDialog" >
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">420dp</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="xl_select_linear">
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingTop">@dimen/dp_4</item>
        <item name="android:paddingBottom">@dimen/dp_4</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="txl_select_icon">
        <item name="android:padding">@dimen/dp_5</item>
        <item name="android:layout_width">@dimen/dp_40</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_height">@dimen/dp_40</item>
    </style>
    <style name="txl_select_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">信息</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/fontSize_16sp</item>
        <item name="android:paddingLeft">@dimen/dp_15</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
    </style>
</resources>
