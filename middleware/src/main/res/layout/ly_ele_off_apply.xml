<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40">
    <com.supcon.mes.mbap.view.CustomTextView
        android:id="@+id/eleOff"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="@dimen/dp_10"
        android:tag="eleOff"
        app:necessary="true"
        app:key="生成停电票:"
        app:key_width="@dimen/dp_120"/>
    <!--<CheckBox
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/eleOffChkBox"
        android:tag="eleOffChkBox"
        android:layout_alignParentEnd="true"
        android:checked="false"
        android:layout_centerVertical="true"
        android:button="@drawable/sl_checkbox_selector_small"/>-->
    <RadioGroup
        android:id="@+id/eleOffRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@color/white"
        android:gravity="end|center_vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:paddingEnd="@dimen/dp_10"
        android:paddingStart="@dimen/dp_10"
        android:tag="eleOffRadioGroup">
        <RadioButton
            android:id="@+id/noRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:button="@drawable/sl_checkbox_selector_small"
            android:drawablePadding="@dimen/dp_5"
            android:paddingStart="@dimen/dp_5"
            android:tag="noRadioButton"
            android:text="@string/middleware_no"
            android:textSize="@dimen/fontSize_14sp" />
        <RadioButton
            android:id="@+id/yesRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:button="@drawable/sl_checkbox_selector_small"
            android:drawablePadding="@dimen/dp_5"
            android:paddingStart="@dimen/dp_5"
            android:tag="yesRadioButton"
            android:text="@string/middleware_yes"
            android:textSize="@dimen/fontSize_14sp" />
    </RadioGroup>
</RelativeLayout>