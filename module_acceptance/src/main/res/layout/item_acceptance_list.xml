<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_15"
    android:paddingRight="@dimen/dp_15">

    <com.supcon.mes.mbap.view.CustomTextView
        android:id="@+id/itemAcceptanceEam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_5"
        android:tag="itemAcceptanceEam"
        app:content_hint="--"
        app:gravity="center"
        app:key="设      备:"
        app:max_lines="1" />

    <com.supcon.mes.mbap.view.CustomTextView
        android:id="@+id/itemAcceptanceItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_5"
        android:tag="itemAcceptanceItem"
        app:content_hint="--"
        app:gravity="center"
        app:key="验收项目:"
        app:max_lines="1" />

    <com.supcon.mes.mbap.view.CustomTextView
        android:id="@+id/itemAcceptanceTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_5"
        android:tag="itemAcceptanceTime"
        app:content_hint="--"
        app:gravity="center"
        app:key="验收日期:"
        app:max_lines="100" />

    <com.supcon.mes.mbap.view.CustomTextView
        android:id="@+id/itemAcceptanceStaff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_5"
        android:tag="itemAcceptanceStaff"
        app:content_hint="--"
        app:gravity="center"
        app:key="验收人:"
        app:max_lines="100" />

    <com.supcon.mes.mbap.view.CustomTextView
        android:id="@+id/itemAcceptanceDept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_5"
        android:tag="itemAcceptanceDept"
        app:content_hint="--"
        app:gravity="center"
        app:key="所属车间:"
        app:max_lines="100" />
</LinearLayout>