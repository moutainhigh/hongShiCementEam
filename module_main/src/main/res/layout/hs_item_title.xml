<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:layout_height="30dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingStart="10dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="5dp"
            android:layout_height="13dp"
            android:layout_centerVertical="true"
            android:background="@color/themeColor"
            android:tag="contentTitleIc" />

        <TextView
            android:id="@+id/contentTitleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="13dp"
            android:layout_centerVertical="true"
            android:tag="contentTitleLabel"
            android:text="@string/main_warn_work"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <com.supcon.mes.middleware.ui.view.MarqueeTextView
            android:id="@+id/contentTitleTips"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13dp"
            android:layout_toEndOf="@+id/contentTitleLabel"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:tag="contentTitleTips"
            android:textColor="@color/customRed"
            android:textSize="@dimen/fontSize_16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/contentTitleSettingIc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableRight="@drawable/ic_into"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:tag="contentTitleSettingIc"
            android:text="更多"
            android:textColor="#a2a2a2"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>