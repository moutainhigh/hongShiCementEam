<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:dither="true"
            android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#08000000"
                android:startColor="#FF000000" />
