<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dp_5"
    android:paddingBottom="@dimen/dp_5"
    android:paddingStart="@dimen/dp_10"
    android:background="@color/themeColor"
    >
    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_filter_white_stroke"
        android:scaleType="centerInside"
        android:layout_gravity="center_vertical"
        android:visibility="visible"/>
    <com.supcon.mes.mbap.view.CustomFilterView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/riskAssessmentFilter"
        android:tag="riskAssessmentFilter"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_5"
        app:text="风险评估"
        app:text_size="14"
        app:text_color="@color/white"
        app:icon_res="@drawable/ic_choose_white2"
        />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:scrollbars="none">

        <RadioGroup
            android:id="@+id/radioGroupFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical|end"
            android:orientation="horizontal"
            android:tag="radioGroupFilter" />

    </HorizontalScrollView>

</LinearLayout>